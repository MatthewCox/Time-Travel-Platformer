# GNU Make solution makefile autogenerated by Premake
# Type "make help" for usage help

ifndef config
  config=debug
endif
export config

PROJECTS := FlatWorld Platformer

.PHONY: all clean help $(PROJECTS)

all: $(PROJECTS)

FlatWorld: 
	@echo "==== Building FlatWorld ($(config)) ===="
	@${MAKE} --no-print-directory -C . -f FlatWorld.make

Platformer: FlatWorld
	@echo "==== Building Platformer ($(config)) ===="
	@${MAKE} --no-print-directory -C . -f Platformer.make

clean:
	@${MAKE} --no-print-directory -C . -f FlatWorld.make clean
	@${MAKE} --no-print-directory -C . -f Platformer.make clean

help:
	@echo "Usage: make [config=name] [target]"
	@echo ""
	@echo "CONFIGURATIONS:"
	@echo "   debug"
	@echo "   release"
	@echo ""
	@echo "TARGETS:"
	@echo "   all (default)"
	@echo "   clean"
	@echo "   FlatWorld"
	@echo "   Platformer"
	@echo ""
	@echo "For more information, see http://industriousone.com/premake/quick-start"
